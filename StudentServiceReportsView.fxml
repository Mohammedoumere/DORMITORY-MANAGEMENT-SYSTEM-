<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dormitory.controllers.StudentServiceReportsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Reports from Proctors">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <TableView fx:id="proctorReportsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colProctorName" prefWidth="150.0" text="Proctor Name" />
                <TableColumn fx:id="colProctorBlock" prefWidth="100.0" text="Block" />
                <TableColumn fx:id="colProctorReportTitle" prefWidth="250.0" text="Title" />
                <TableColumn fx:id="colProctorReportDesc" prefWidth="350.0" text="Description" />
                <TableColumn fx:id="colProctorReportStatus" prefWidth="100.0" text="Status" />
                <TableColumn fx:id="colProctorReportActions" prefWidth="200.0" text="Actions" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
