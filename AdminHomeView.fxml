<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="489.0" prefWidth="692.0" spacing="20.0" styleClass="main-container" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dormitory.controllers.AdminHomeViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label fx:id="welcomeLabel" styleClass="section-title" text="Dashboard Overview" />
        <GridPane alignment="CENTER" hgap="25.0" prefHeight="334.0" prefWidth="589.0" vgap="25.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <!-- Row 0: Student Stats -->
                <VBox alignment="CENTER" spacing="10.0" styleClass="stat-card" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label fx:id="totalStudentsLabel" styleClass="stat-number-large" text="0" />
                    <Label styleClass="stat-description-large" text="Total Students" />
                </VBox>
                <VBox alignment="CENTER" spacing="10.0" styleClass="stat-card" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label fx:id="maleStudentsLabel" styleClass="stat-number-large" text="0" />
                    <Label styleClass="stat-description-large" text="Male Students" />
                </VBox>
                <VBox alignment="CENTER" spacing="10.0" styleClass="stat-card" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <Label fx:id="femaleStudentsLabel" styleClass="stat-number-large" text="0" />
                    <Label styleClass="stat-description-large" text="Female Students" />
                </VBox>
                <VBox alignment="CENTER" spacing="10.0" styleClass="stat-card" GridPane.columnIndex="3" GridPane.rowIndex="0">
                    <Label fx:id="totalReportsLabel" styleClass="stat-number-large" text="0" />
                    <Label styleClass="stat-description-large" text="Total Reports" />
                </VBox>

                <!-- Row 1: Proctor Stats -->
                <VBox alignment="CENTER" spacing="10.0" styleClass="stat-card" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Label fx:id="totalProctorsLabel" styleClass="stat-number-large" text="0" />
                    <Label styleClass="stat-description-large" text="Total Proctors" />
                </VBox>
                <VBox alignment="CENTER" spacing="10.0" styleClass="stat-card" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Label fx:id="maleProctorsLabel" styleClass="stat-number-large" text="0" />
                    <Label styleClass="stat-description-large" text="Male Proctors" />
                </VBox>
                <VBox alignment="CENTER" spacing="10.0" styleClass="stat-card" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <Label fx:id="femaleProctorsLabel" styleClass="stat-number-large" text="0" />
                    <Label styleClass="stat-description-large" text="Female Proctors" />
                </VBox>

                <!-- Row 2: Block Stats -->
                <VBox alignment="CENTER" spacing="10.0" styleClass="stat-card" GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <Label fx:id="totalBlocksLabel" styleClass="stat-number-large" text="0" />
                    <Label styleClass="stat-description-large" text="Total Blocks" />
                </VBox>
                <VBox alignment="CENTER" spacing="10.0" styleClass="stat-card" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <Label fx:id="maleBlocksLabel" styleClass="stat-number-large" text="0" />
                    <Label styleClass="stat-description-large" text="Male Blocks" />
                </VBox>
                <VBox alignment="CENTER" spacing="10.0" styleClass="stat-card" GridPane.columnIndex="2" GridPane.rowIndex="2">
                    <Label fx:id="femaleBlocksLabel" styleClass="stat-number-large" text="0" />
                    <Label styleClass="stat-description-large" text="Female Blocks" />
                </VBox>
            </children>
        </GridPane>
    </children>
</VBox>
