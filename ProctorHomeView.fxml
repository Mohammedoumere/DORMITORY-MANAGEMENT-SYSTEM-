<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="423.0" prefWidth="724.0" spacing="20.0" styleClass="main-container" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dormitory.controllers.ProctorHomeViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label fx:id="welcomeLabel" styleClass="section-title" text="Proctor Dashboard" />
        <Label fx:id="proctorBlockInfoLabel" styleClass="info-label">
            <font>
                <Font name="System Italic" size="20.0" />
            </font>
        </Label>
        <GridPane alignment="CENTER" hgap="25.0" prefHeight="209.0" prefWidth="690.0" vgap="25.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <VBox alignment="CENTER" prefHeight="44.0" prefWidth="214.0" spacing="10.0" styleClass="stat-card" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label fx:id="totalStudentsLabel" styleClass="stat-number-large" text="0" />
                    <Label styleClass="stat-description-large" text="Students in Your Block" />
                </VBox>
                <VBox alignment="CENTER" spacing="10.0" styleClass="stat-card" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label fx:id="totalReportsLabel" styleClass="stat-number-large" text="0" />
                    <Label styleClass="stat-description-large" text="Reports to You" />
                </VBox>
                <VBox alignment="CENTER" spacing="10.0" styleClass="stat-card" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Label fx:id="totalRoomsLabel" styleClass="stat-number-large" text="0" />
                    <Label styleClass="stat-description-large" text="Total Rooms in Block" />
                </VBox>
                <VBox alignment="CENTER" spacing="10.0" styleClass="stat-card" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Label fx:id="assignedStudentsLabel" styleClass="stat-number-large" text="0" />
                    <Label styleClass="stat-description-large" text="Students with Rooms" />
                </VBox>
                <VBox alignment="CENTER" spacing="10.0" styleClass="stat-card" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <Label fx:id="availableRoomsLabel" styleClass="stat-number-large" text="0" />
                    <Label styleClass="stat-description-large" text="Available Rooms" />
                </VBox>
            </children>
        </GridPane>
    </children>
</VBox>
