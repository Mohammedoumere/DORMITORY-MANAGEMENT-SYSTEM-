<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@../css/dashboard.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dormitory.controllers.StudentHomeController">
   <top>
      <HBox alignment="CENTER_RIGHT" prefHeight="40.0" spacing="5" styleClass="title-bar">
         <children>
            <Label text="Student Portal" textFill="white">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="minimizeButton" onAction="#minimizeApplication" prefHeight="25.0" prefWidth="33.0" styleClass="window-button" text="_" />
            <Button fx:id="maximizeButton" onAction="#maximizeApplication" prefHeight="25.0" prefWidth="36.0" styleClass="window-button" text="[]" />
            <Button fx:id="closeButton" onAction="#closeApplication" prefHeight="25.0" prefWidth="38.0" styleClass="window-button close-button" text="X" />
         </children>
      </HBox>
   </top>
   <left>
      <VBox fx:id="navBox" prefWidth="220.0" spacing="10.0" styleClass="nav-vbox">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
         </padding>
         <children>
            <Label alignment="CENTER" prefWidth="200.0" text="Student" textFill="#2f2d2d">
               <font>
                  <Font name="System Bold" size="27.0" />
               </font>
            </Label>
            <Button fx:id="homeButton" onAction="#showHomeView" prefHeight="40.0" prefWidth="200.0" styleClass="nav-button" text="Home" />
            <Button fx:id="myDetailsButton" onAction="#showMyDetailsView" prefHeight="40.0" prefWidth="200.0" styleClass="nav-button" text="My Details" />
            <Button fx:id="reportsButton" onAction="#showReportsView" prefHeight="40.0" prefWidth="200.0" styleClass="nav-button" text="Reports" />
            <Button fx:id="profileButton" onAction="#showProfileView" prefHeight="40.0" prefWidth="200.0" styleClass="nav-button" text="Profile" />
            <Button fx:id="settingsButton" onAction="#showSettingsView" prefHeight="40.0" prefWidth="200.0" styleClass="nav-button" text="Settings" />
         </children>
      </VBox>
   </left>
   <center>
      <BorderPane fx:id="contentPane" style="-fx-background-color: #ecf0f1;" />
   </center>
</BorderPane>
