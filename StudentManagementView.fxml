<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dormitory.controllers.StudentManagementController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Student Management">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Pane HBox.hgrow="ALWAYS" />
            <Button onAction="#showAddStudentDialog" text="+ Add Student" styleClass="primary-button"/>
         </children>
      </HBox>

      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <TextField fx:id="searchStudentField" prefWidth="300.0" promptText="Search by ID or Name..." />
         </children>
      </HBox>

      <TableView fx:id="studentTable" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colStudentIndex" prefWidth="40.0" text="No." />
            <TableColumn fx:id="colStudentId" prefWidth="100.0" text="Student ID" />
            <TableColumn fx:id="colStudentName" prefWidth="150.0" text="Full Name" />
            <TableColumn fx:id="colStudentGender" prefWidth="80.0" text="Gender" />
            <TableColumn fx:id="colStudentCollege" prefWidth="150.0" text="College" />
            <TableColumn fx:id="colStudentDepartment" prefWidth="150.0" text="Department" />
            <TableColumn fx:id="colStudentYear" prefWidth="50.0" text="Year" />
            <TableColumn fx:id="colStudentNationality" prefWidth="100.0" text="Nationality" />
            <TableColumn fx:id="colStudentRegion" prefWidth="120.0" text="Region" />
            <TableColumn fx:id="colStudentCity" prefWidth="100.0" text="City" />
            <TableColumn fx:id="colStudentBlock" prefWidth="80.0" text="Block" />
            <TableColumn fx:id="colStudentStatus" prefWidth="100.0" text="Status" />
            <TableColumn fx:id="colStudentActions" prefWidth="150.0" text="Actions" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</VBox>
