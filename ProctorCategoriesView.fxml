<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dormitory.controllers.ProctorCategoriesController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT">
            <Label text="Student &amp; Room Management">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <HBox HBox.hgrow="ALWAYS" />
            <Button onAction="#showAssignRoomDialog" text="+ Assign Student to Room" styleClass="primary-button" />
        </HBox>
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <TextField fx:id="searchField" prefWidth="300.0" promptText="Search by Name or Room..." />
        </HBox>
        <TableView fx:id="studentTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colIndex" prefWidth="40.0" text="No." />
                <TableColumn fx:id="colId" prefWidth="100.0" text="Student ID" />
                <TableColumn fx:id="colName" prefWidth="150.0" text="Full Name" />
                <TableColumn fx:id="colGender" prefWidth="80.0" text="Gender" />
                <TableColumn fx:id="colYear" prefWidth="50.0" text="Year" />
                <TableColumn fx:id="colDept" prefWidth="150.0" text="Department" />
                <TableColumn fx:id="colNationality" prefWidth="120.0" text="Nationality" />
                <TableColumn fx:id="colRegion" prefWidth="150.0" text="Region" />
                <TableColumn fx:id="colCity" prefWidth="120.0" text="City" />
                <TableColumn fx:id="colRoom" prefWidth="100.0" text="Room" />
                <TableColumn fx:id="colResidentName" prefWidth="150.0" text="Emergency Contact" />
                <TableColumn fx:id="colResidentRelation" prefWidth="120.0" text="Relation" />
                <TableColumn fx:id="colResidentPhone" prefWidth="120.0" text="Contact's Phone" />
                <TableColumn fx:id="colActions" prefWidth="150.0" text="Actions" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
