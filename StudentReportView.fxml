<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dormitory.controllers.StudentReportController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Submit a Report to Your Proctor">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <TextField fx:id="titleField" promptText="Report Title (e.g., Leaky Faucet in Room 101)" />
        <TextArea fx:id="descriptionArea" promptText="Please describe the problem in detail..." wrapText="true" VBox.vgrow="ALWAYS" />
        <Button onAction="#submitReport" text="Submit Report" styleClass="primary-button" />

        <Label text="My Submitted Reports">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Label>
        <TableView fx:id="reportsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colTitle" prefWidth="250.0" text="Title" />
                <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
                <TableColumn fx:id="colReply" prefWidth="400.0" text="Proctor's Reply" />
                <TableColumn fx:id="colDate" prefWidth="150.0" text="Date Submitted" />
                <TableColumn fx:id="colActions" prefWidth="100.0" text="Actions" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
