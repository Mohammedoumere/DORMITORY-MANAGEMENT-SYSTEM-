<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<TabPane tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dormitory.controllers.ProctorReportsController">
    <tabs>
        <Tab text="Student Reports">
            <content>
                <VBox spacing="15.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <Label text="Reports from Students in Your Block">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <TableView fx:id="studentReportsTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colStudentName" prefWidth="150.0" text="Student Name" />
                                <TableColumn fx:id="colStudentReportTitle" prefWidth="250.0" text="Title" />
                                <TableColumn fx:id="colStudentReportDesc" prefWidth="350.0" text="Description" />
                                <TableColumn fx:id="colStudentReportStatus" prefWidth="100.0" text="Status" />
                                <TableColumn fx:id="colStudentReportActions" prefWidth="200.0" text="Actions" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </content>
        </Tab>
        <Tab text="My Reports to Admin">
            <content>
                <VBox spacing="15.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <Label text="Submit a Report to Student Service">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <TextField fx:id="proctorTitleField" promptText="Report Title (e.g., Block B Security Light Out)" />
                        <TextArea fx:id="proctorDescriptionArea" promptText="Please describe the issue in detail..." wrapText="true" VBox.vgrow="ALWAYS" />
                        <Button onAction="#submitProctorReport" text="Submit Report to Admin" styleClass="primary-button" />

                        <Label text="My Submitted Reports">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                        </Label>
                        <TableView fx:id="proctorReportsTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colProctorReportTitle" prefWidth="250.0" text="Title" />
                                <TableColumn fx:id="colProctorReportStatus" prefWidth="100.0" text="Status" />
                                <TableColumn fx:id="colProctorReportReply" prefWidth="400.0" text="Admin's Reply" />
                                <TableColumn fx:id="colProctorReportDate" prefWidth="150.0" text="Date Submitted" />
                                <TableColumn fx:id="colProctorReportActions" prefWidth="100.0" text="Actions" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </content>
        </Tab>
    </tabs>
</TabPane>
