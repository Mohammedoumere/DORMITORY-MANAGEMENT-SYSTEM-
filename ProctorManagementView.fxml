<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dormitory.controllers.ProctorManagementController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Proctor Management">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Pane HBox.hgrow="ALWAYS" />
            <Button onAction="#showAddProctorDialog" text="+ Add Proctor" styleClass="primary-button"/>
         </children>
      </HBox>

      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <TextField fx:id="searchProctorField" prefWidth="300.0" promptText="Search by Name or Block..." />
         </children>
      </HBox>

      <TableView fx:id="proctorTable" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colProctorIndex" prefWidth="50.0" text="No." />
            <TableColumn fx:id="colProctorId" prefWidth="120.0" text="Proctor ID" />
            <TableColumn fx:id="colProctorName" prefWidth="200.0" text="Full Name" />
            <TableColumn fx:id="colProctorGender" prefWidth="100.0" text="Gender" />
            <TableColumn fx:id="colProctorBlock" prefWidth="120.0" text="Block" />
            <TableColumn fx:id="colProctorPhone" prefWidth="150.0" text="Phone" />
            <TableColumn fx:id="colProctorActions" prefWidth="150.0" text="Actions" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</VBox>
