<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dormitory.controllers.ProctorCategoriesViewController">
   <content>
      <VBox prefHeight="723.0" prefWidth="919.0" spacing="15.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label text="Student &amp; Room Management">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <TextField fx:id="studentIdField" promptText="Student ID" />
                  <ComboBox fx:id="roomCombo" prefWidth="200.0" promptText="Select Available Room" />
                  <Button onAction="#assignRoom" text="Assign Room" />
                  <HBox HBox.hgrow="ALWAYS" />
                  <TextField fx:id="searchField" promptText="Search by Name or Room..." />
               </children>
            </HBox>

            <TableView fx:id="studentTable" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colId" prefWidth="69.0" text="Student ID" />
                  <TableColumn fx:id="colName" prefWidth="87.0" text="Full Name" />
                  <TableColumn fx:id="colGender" prefWidth="58.0" text="Gender" />
                  <TableColumn fx:id="colYear" prefWidth="32.0" text="Year" />
                  <TableColumn fx:id="colDept" prefWidth="78.0" text="Department" />
                  <TableColumn fx:id="colPhone" prefWidth="108.0" text="Phone" />
                  <TableColumn fx:id="colResidentName" prefWidth="104.0" text="Resident Name" />
                  <TableColumn fx:id="colResidentRelation" prefWidth="58.0" text="Relation" />
                  <TableColumn fx:id="colResidentPhone" prefWidth="69.0" text="Res. Phone" />
                  <TableColumn fx:id="colRoom" prefWidth="63.0" text="Room" />
                  <TableColumn fx:id="colActions" prefWidth="151.0" text="Actions" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </content>
</ScrollPane>
